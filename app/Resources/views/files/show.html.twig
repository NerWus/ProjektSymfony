{% extends '@PetkoparaCrudGenerator/base.html.twig' %}

{% block title %}
{{ parent() }} - file
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View file <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p name = "id">
            {{ file.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Filename</strong></p>
        <p>
            {{ file.fileName }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Description</strong></p>
        <p>
            {{ file.description }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Date</strong></p>
        <p>
            {% if file.date %}{{ file.date|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Subject</strong></p>
        <p>
            {{ file.subject }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Download</strong></p>

        <form action="{{ path('file_download', { 'id': file.id } ) }}" target="_blank" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DOWNLOAD" />
            <button  class="btn btn-primary" type="submit" >
                <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
                Download File
            </button>
        </form>
</div>
<hr/>

<div class="form-group">
    <a class="btn btn-default" href="{{ path('files') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    pcg_page
        <a class="btn btn-primary" href="{{ path('files_edit', { 'id':  file.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
        </a>
        <a class="btn btn-info" href="{{ path('files_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
        <form action="{{ path('files_delete', { 'id': file.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete
            </button>
        </form>

</div>


{% endblock %}

